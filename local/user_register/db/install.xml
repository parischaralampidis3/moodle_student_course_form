<?xml version="1.0" encoding="UTF-8" ?>
<xmldb>
    <tables>
        <table name="user_register">
            <fields>
                <field name="id" type="int" length="10" notnull="true" sequence="true" comment="primary id"/>
                <field name="email" type="varchar" length="50" notnull="true" comment="user email address"/>
                <field name="firstname" type="varchar" length="50" notnull="true" comment="user first name"/>
                <field name="lastname" type="varchar" length="50" notnull="true" comment="user last name"/>
                <field name="country" type="varchar" length="50" notnull="true" comment="user country"/>
                <field name="mobile_phone" type="varchar" length="10" notnull="true" comment="user mobile phone"/>
                <field name="created_at" type="int" length="10" unsigned="true" notnull="true" default="0" comment="creation timestamp"/>
                <field name="updated_at" type="int" length="10" unsigned="true" notnull="true" default="0" comment="update timestamp"/>
            </fields>
            <keys>
                <key name="primary" type="primary" fields="id"/>
            </keys>
            <indexes>
                <index name="email_unique" unique="true" fields="email"/>
            </indexes>
        </table>
    </tables>
</xmldb>